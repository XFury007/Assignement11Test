<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiBankingExercise.ViewModel"
             x:Class="MauiBankingExercise.Views.AccountsPage"
             Title="Accounts">

    <ContentPage.BindingContext>
        <vm:AccountsViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="10">
        <Button Text="Load Accounts"
                Clicked="OnLoadAccountsClicked" />

        <CollectionView ItemsSource="{Binding Accounts}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="10" Spacing="5" BackgroundColor="LightGray">
                        <Label Text="{Binding AccountNumber}" FontAttributes="Bold" />
                        <Label Text="{Binding AccountBalance}" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>




